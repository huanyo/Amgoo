<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.amgoo.activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_backgroud"
    android:orientation="vertical" >

    <com.agmoo.picture.TitleHeaderBar
        android:id="@+id/pageHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:leftText="@string/customAlbum_cancel"
        app:rightText="@string/send"
        app:showLeft="true"
        app:showRight="true" >
    </com.agmoo.picture.TitleHeaderBar>

    <LinearLayout
        android:id="@+id/linly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/publishfun_editText_something"
            style="@style/font_input_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:ems="10"
            android:gravity="top"
            android:hint="@string/question"
            android:minHeight="150dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/publishfun_ly_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="20dp" >

            <GridView
                android:id="@+id/noScrollgridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="3dp"
                android:numColumns="4"
                android:scrollbars="none"
                android:verticalSpacing="5dp" >
            </GridView>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/theme_stroke" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/obd_hint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_left_bg"
            android:gravity="center_vertical|left"
            android:paddingLeft="15dp"
            android:text=""
            android:textColor="@color/theme_blue"
            android:textSize="14sp" />

        <View style="@style/vertical_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_right_bg"
            android:gravity="center_vertical|right"
            android:paddingRight="5dp"
            android:text="OBD"
            android:textColor="@color/red"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:id="@+id/bottom_line"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/theme_stroke"
        android:visibility="gone" />

</LinearLayout>