<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    tools:context=".SchoolActivity" >

    <RelativeLayout
        android:id="@+id/mTopBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/topbar_bg" >

        <TextView
            android:id="@+id/mTopBarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="2dp"
            android:textColor="@android:color/white"
            android:text="@string/school"
            android:textSize="@dimen/design_size_32" />

        <TextView
            android:id="@+id/mTopBarRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/fx_saoyisao"
            android:drawablePadding="3dp"
            android:paddingLeft="3dp"
        
            android:textColor="@drawable/fanhui"
            android:textSize="10sp" >
        </TextView>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_below="@+id/mTopBar"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="15.5dp"
        android:background="@color/divide_line" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/mTopBar"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:background="@color/divide_line" />

        <com.amgoo.tool.CircleImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:background="@color/topbar_bg"
            android:src="@drawable/amgoofabu" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/fabu"
            android:textColor="@color/menu_text_color" />

        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/divide_line" />

        <com.amgoo.tool.CircleImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:background="@color/topbar_bg"
            android:src="@drawable/chanpinshiyong" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/productuuser"
            android:textColor="@color/menu_text_color" >
        </TextView>

        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:background="@color/divide_line" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/divide_line" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="0.3dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:background="@color/divide_line" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:background="@color/topbar_bg"
            android:src="@drawable/xiaoshoujijiao" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/skill"
            android:textColor="@color/menu_text_color" />

        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/divide_line" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:background="@color/topbar_bg"
            android:src="@drawable/qiyewenhua" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/culture"
            android:textColor="@color/menu_text_color" />

        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:background="@color/divide_line" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/divide_line" />

    <GridView
        android:id="@+id/grid_school"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:numColumns="2" >
    </GridView>

</RelativeLayout>